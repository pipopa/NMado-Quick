 {
    "name": "N窓 Quick",
    "version": "1.0",
    "description": "YouTubeから直接N窓に動画を追加できるようにするアドオンです",
    "manifest_version": 2,
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/*"
        ],
        "js":[
          "subscription.js"
        ], 
        "css":[
          "style.css"
        ]
      },
      {
        "matches": [
          "https://www.youtube.com/watch*"
        ],
        "js": [
          "player.js"
        ],
        "css":[
          "style.css"
        ]
      },
      {
        "matches": [
          "*://piporoid.net/NMado/*"
        ], 
        "js":[
          "nmado.js"
        ]
      }
    ],
    "permissions": [
      "https://www.youtube.com/*",
      "https://piporoid.net/NMado/*",
      "tabs"
    ]
 }
