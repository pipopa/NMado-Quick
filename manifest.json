 {
    "name": "N窓 Quick",
    "version": "1.0",
    "description": "YouTubeから直接N窓に動画を追加できるようにするアドオンです",
    "manifest_version": 2,
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "*://piporoid.net/NMado/*"
        ],
        "js":[
          "nmado.js"
        ]
      },
      {
        "matches": [
          "https://www.youtube.com/*"
        ],
        "js":[
          "subscription.js",
          "player.js"
        ],
        "css":[
          "style.css"
        ]
      },
      {
        "matches": [
          "https://www.itsukaralink.jp/"
        ],
        "js": [
          "itsukara.js"
        ],
        "css": [
          "style.css"
        ]
      }
    ],
    "permissions": [
      "https://www.youtube.com/*",
      "https://www.itsukaralink.jp/*",
      "https://piporoid.net/NMado/*",
      "tabs"
    ]
 }
